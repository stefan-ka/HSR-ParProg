<Window x:Name="webCrawlerWindow" x:Class="WebCrawler.CrawlerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Web Crawler" Height="350" Width="525">
  <Grid>
    <Button x:Name="startButton" Content="Start" Margin="0,10,10.4,0" VerticalAlignment="Top" Click="startButton_Click" HorizontalAlignment="Right" Width="75" Height="23"/>
    <ListView x:Name="resultListView" Margin="10,46,10.4,9.8">
      <ListView.View>
        <GridView>
          <GridViewColumn Width="498"/>
        </GridView>
      </ListView.View>
    </ListView>
    <TextBox x:Name="addressTextBox" Height="23" Margin="10,10,90.4,0" TextWrapping="Wrap" Text="http://www.hsr.ch" VerticalAlignment="Top"/>

  </Grid>
</Window>
